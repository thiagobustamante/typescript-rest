{
  "name": "typescript-rest",
  "version": "3.0.2",
  "description": "A Library to create RESTFul APIs with Typescript",
  "author": "Thiago da Rosa de Bustamante <thiago@cruxframework.org>",
  "keywords": [
    "API",
    "REST",
    "RESTFul",
    "service",
    "microservice",
    "typescript",
    "node server"
  ],
  "main": "./dist/typescript-rest.js",
  "typings": "./dist/typescript-rest.d.ts",
  "license": "MIT",
  "scripts": {
    "start": "tsc -w",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "prepare": "rimraf dist && tsc",
    "lint": "tslint ./src/**/*.ts ./test/**/*.ts",
    "lint:fix": "tslint --fix ./src/**/*.ts ./test/**/*.ts -t verbose",
    "pretest": "cross-env NODE_ENV=test npm run build && npm run lint",
    "test": "cross-env NODE_ENV=test mocha --config=./test/.mocharc.yaml --exit",
    "test:integration": "cross-env NODE_ENV=test mocha --config=./test/.mocharc-integration.yaml  --exit",
    "test:unit": "cross-env NODE_ENV=test mocha --config=./test/.mocharc-unit.yaml  --exit",
    "test:coverage": "nyc npm test",
    "tsc": "tsc"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "json",
      "html"
    ],
    "report-dir": "./reports/coverage",
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@types/body-parser": "1.17.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.2",
    "@types/multer": "1.3.7",
    "@types/passport": "^1.0.2",
    "@types/serve-static": "^1.13.3",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.3",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.21",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.12",
    "require-glob": "^3.2.0",
    "swagger-ui-express": "^4.1.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.8",
    "@types/debug": "^4.1.5",
    "@types/express-serve-static-core": "^4.17.17",
    "@types/fs-extra": "5.0.4",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^8.2.0",
    "@types/passport-jwt": "^3.0.3",
    "@types/proxyquire": "^1.3.28",
    "@types/request": "^2.48.4",
    "@types/sinon": "^7.5.1",
    "@types/sinon-chai": "^3.2.3",
    "@types/yamljs": "^0.2.30",
    "chai": "^4.2.0",
    "codecov": "^3.6.4",
    "cross-env": "^5.2.1",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^8.2.1",
    "nyc": "^15.0.0",
    "passport-jwt": "^4.0.0",
    "proxyquire": "^2.1.3",
    "request": "^2.88.0",
    "rimraf": "^2.7.1",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.4.0",
    "source-map-support": "^0.5.16",
    "test-wait": "^1.1.3",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^4.1.3",
    "typescript-ioc": "^3.0.3",
    "typescript-rest-ioc": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thiagobustamante/typescript-rest.git"
  },
  "bugs": {
    "url": "https://github.com/thiagobustamante/typescript-rest/issues"
  },
  "directories": {
    "lib": "dist",
    "doc": "doc"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "engineStrict": true
}
